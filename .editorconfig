# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]

indent_style = space
indent_size = 2

end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{h,c,cxx,cpp,m,mm}]
indent_size = 4

[*.{kt,java,gradle,kts}]
indent_size = 4
